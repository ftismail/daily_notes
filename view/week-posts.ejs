<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>CoopWED</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <script defer src="https://use.fontawesome.com/releases/v5.5.0/js/all.js" integrity="sha384-GqVMZRt5Gn7tB9D9q7ONtcp4gtHIUEW/yG7h98J7IpE3kpi+srfFyyB/04OV6pG0" crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i" rel="stylesheet">
  <link rel="stylesheet" href="/css/all.css">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="icon" href="/images/logo.jpg">
</head>
<body>
  <header class="header-bar mb-3">
    <div class="container d-flex flex-column flex-md-row align-items-center p-3">
      <h4 class="my-0 mr-md-auto font-weight-normal"><a href="/" class="text-white">CoopWED</a></h4>
        <div class="flex-row my-3 my-md-0">
          <a href="/profile/<%= user._id %>" class="mr-2"><img title="My Profile" data-toggle="tooltip" data-placement="bottom" style="width: 32px; height: 32px; border-radius: 16px;"
             src="/images/<%=user.img%>"></a>
          <a class="btn btn-sm btn-success mr-2" href="/ %>">Create Post</a>
          <form action="/logout" method="POST" class="d-inline">
            <button class="btn btn-sm btn-secondary">Sign Out</button>
          </form>
        </div>
    </div>
  </header>
  <!-- header ends here -->
  <div class="container">
      <div class="img-container d-flex flex-column width justify-content-center align-items-center ">
          <img src="/images/<%=user.img%>" alt="" srcset="" class="rounded-circle p-1 bg-primary" width="200" height="200">
          <h1 class="text-capitalize my-3"><%=user.username%></h1>
      </div>
      <div class="page-header border-top d-flex justify-content-center">
        <h1>Your Weekly Notes</h1>
      </div>
      <div class=" posts_container row m-2">
        <% posts.map((post)=>{%>
          <div class="p-2 col col-sm-4 " >
                <div class="post fs-6 d-flex bg-light p-2 justify-content-between rounded">
                  <div class=" w-50 text_container">
                    <span class="text-muted fs-6"> on <%= post.date.getDate() %>/<%= post.date.getMonth() + 1 %>/<%= post.date.getFullYear() %> </span>
                    <h5><%=user.username%></h5>
                    <th></th>
                  </div>
                  
                    <div class="w-50 icon d-flex flex-column align-items-end">
                      
                      <a class="cursor-pointer" href="/edit-post/<%=post._id%>"><i class="far fa-edit "></i></a>
                      <form action="/delet-post/<%=post._id%>" method="post">
                        <button class="btn p-0 pe-1" type="submit"><i class="fa-solid fa-xmark mt-2 cursor-pointer"></i></button>
                      </form>
                      
                    </div>
                  
                  <div class="postss w-100">
                    <%if(post.type=='text'){%>
                      <p class="d-inline-block text-truncate" style="max-width: 100%;"><%=post.post%></p>
                      <%if(post.post.length >= 50){%>
                        <a href="/single-post/<%=post._id%>" class="cursor-pointer">read more</a>
                      <%}%>
                    <%}else{%>
                      <audio controls >
                        <source src="/audio/<%=post.post%>" type="audio/mpeg">
                      </audio>
                    <%}%>
                  </div>
                </div>
              </div>
        <%})%>
  </div>




  <footer class=" bg-dark border-top text-center small text-white py-3">
    <p class="m-0">Copyright &copy; 2022 <a href="/" class="text-white">CoopWED</a>. All rights reserved.</p>
  </footer>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>